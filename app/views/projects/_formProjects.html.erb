<%= form_for @project do |f| %>
  <p>
    <%= f.label 'Title*' %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label 'Manager*' %>
    <%= f.select :manager_id, options_for_select([current_user.username]) %>
  </p>

  <p>
    <%= f.label 'Add a user' %>
    <%= f.select :user_ids, options_for_select(@usernames), multiple: true %>
  </p>

  <%# <p> %>
    <%# <%= f.label 'Add Users' %> %>
    <%# <%= f.select :user_ids, options_from_collection_for_select(@usernames, 'id', 'name'), multiple: true %> %>
  <%# </p> %>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>